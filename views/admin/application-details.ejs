<div class="p-6 md:p-8 lg:p-10">

    <!-- Header -->
    <div class="mb-6">
        <div class="flex items-center gap-3 mb-2">
            <a href="/admin/programs/<%= program._id %>/applications" class="text-slate-600 hover:text-slate-800">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </a>
            <h1 class="text-3xl font-bold text-slate-800">Application Details</h1>
        </div>
        <p class="text-slate-600 ml-9">Review application for <%= program.name %></p>
    </div>

    <!-- Status Banner -->
    <div class="mb-6 bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="p-6 <%= application.status === 'pending' ? 'bg-yellow-50' : application.status === 'approved' ? 'bg-green-50' : application.status === 'rejected' ? 'bg-red-50' : 'bg-blue-50' %>">
            <div class="flex items-center justify-between">
                <div>
                    <h2 class="text-2xl font-bold text-slate-800 mb-2"><%= application.fullName %></h2>
                    <p class="text-slate-600">Applied on <%= new Date(application.applicationDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                </div>
                <div class="text-right">
                    <% if (application.status === 'pending') { %>
                    <span class="px-6 py-3 text-sm font-bold rounded-full bg-yellow-500 text-white">PENDING REVIEW</span>
                    <% } else if (application.status === 'approved') { %>
                    <span class="px-6 py-3 text-sm font-bold rounded-full bg-green-500 text-white">APPROVED</span>
                    <% } else if (application.status === 'rejected') { %>
                    <span class="px-6 py-3 text-sm font-bold rounded-full bg-red-500 text-white">REJECTED</span>
                    <% } else if (application.status === 'completed') { %>
                    <span class="px-6 py-3 text-sm font-bold rounded-full bg-blue-500 text-white">COMPLETED</span>
                    <% } %>
                    <% if (application.reviewedBy && application.reviewedAt) { %>
                    <p class="text-xs text-slate-600 mt-2">Reviewed by <%= application.reviewedBy.name %> on <%= new Date(application.reviewedAt).toLocaleDateString() %></p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        
        <!-- Main Application Details -->
        <div class="lg:col-span-2 space-y-6">
            
            <!-- Personal Information -->
            <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
                <div class="p-6 bg-gradient-to-r from-blue-50 to-indigo-50 border-b border-slate-200">
                    <h3 class="text-lg font-bold text-slate-800 flex items-center gap-2">
                        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        Personal Information
                    </h3>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-2 gap-6">
                        <div>
                            <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Full Name</p>
                            <p class="text-slate-800 font-medium"><%= application.fullName %></p>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Date of Birth</p>
                            <p class="text-slate-800 font-medium"><%= new Date(application.dateOfBirth).toLocaleDateString() %></p>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Age</p>
                            <p class="text-slate-800 font-medium"><%= application.age %> years</p>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Gender</p>
                            <p class="text-slate-800 font-medium capitalize"><%= application.gender %></p>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Mobile Number</p>
                            <p class="text-slate-800 font-medium"><%= application.mobileNumber %></p>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Email</p>
                            <p class="text-slate-800 font-medium"><%= application.email || 'Not provided' %></p>
                        </div>
                        <% if (application.aadharNumber) { %>
                        <div>
                            <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Aadhar Number</p>
                            <p class="text-slate-800 font-medium"><%= application.aadharNumber %></p>
                        </div>
                        <% } %>
                        <% if (application.bloodGroup) { %>
                        <div>
                            <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Blood Group</p>
                            <p class="text-slate-800 font-medium"><%= application.bloodGroup %></p>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Address Information -->
            <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
                <div class="p-6 bg-gradient-to-r from-purple-50 to-pink-50 border-b border-slate-200">
                    <h3 class="text-lg font-bold text-slate-800 flex items-center gap-2">
                        <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        Address Details
                    </h3>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-2 gap-6">
                        <div class="col-span-2">
                            <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Street Address</p>
                            <p class="text-slate-800 font-medium"><%= application.address.street %></p>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Area/Locality</p>
                            <p class="text-slate-800 font-medium"><%= application.address.area %></p>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Ward</p>
                            <p class="text-slate-800 font-medium"><%= application.address.ward %></p>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Pincode</p>
                            <p class="text-slate-800 font-medium"><%= application.address.pincode %></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Medical Information -->
            <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
                <div class="p-6 bg-gradient-to-r from-green-50 to-emerald-50 border-b border-slate-200">
                    <h3 class="text-lg font-bold text-slate-800 flex items-center gap-2">
                        <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        Medical Information
                    </h3>
                </div>
                <div class="p-6 space-y-4">
                    <% if (application.medicalHistory) { %>
                    <div>
                        <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Medical History</p>
                        <p class="text-slate-800"><%= application.medicalHistory %></p>
                    </div>
                    <% } %>
                    <% if (application.allergies) { %>
                    <div>
                        <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Allergies</p>
                        <p class="text-slate-800"><%= application.allergies %></p>
                    </div>
                    <% } %>
                    <% if (application.currentMedications) { %>
                    <div>
                        <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Current Medications</p>
                        <p class="text-slate-800"><%= application.currentMedications %></p>
                    </div>
                    <% } %>
                    <% if (application.previousVaccinations) { %>
                    <div>
                        <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Previous Vaccinations</p>
                        <p class="text-slate-800"><%= application.previousVaccinations %></p>
                    </div>
                    <% } %>
                    <% if (!application.medicalHistory && !application.allergies && !application.currentMedications && !application.previousVaccinations) { %>
                    <p class="text-slate-500 italic">No medical information provided</p>
                    <% } %>
                </div>
            </div>

            <!-- Program Preferences -->
            <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
                <div class="p-6 bg-gradient-to-r from-orange-50 to-amber-50 border-b border-slate-200">
                    <h3 class="text-lg font-bold text-slate-800 flex items-center gap-2">
                        <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        Program Preferences
                    </h3>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-2 gap-6">
                        <% if (application.preferredCenter) { %>
                        <div>
                            <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Preferred Center</p>
                            <p class="text-slate-800 font-medium"><%= application.preferredCenter %></p>
                        </div>
                        <% } %>
                        <% if (application.preferredDate) { %>
                        <div>
                            <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Preferred Date</p>
                            <p class="text-slate-800 font-medium"><%= new Date(application.preferredDate).toLocaleDateString() %></p>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Emergency Contact -->
            <% if (application.emergencyContact && application.emergencyContact.name) { %>
            <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
                <div class="p-6 bg-gradient-to-r from-red-50 to-rose-50 border-b border-slate-200">
                    <h3 class="text-lg font-bold text-slate-800 flex items-center gap-2">
                        <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                        Emergency Contact
                    </h3>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-2 gap-6">
                        <div>
                            <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Contact Name</p>
                            <p class="text-slate-800 font-medium"><%= application.emergencyContact.name %></p>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Relation</p>
                            <p class="text-slate-800 font-medium"><%= application.emergencyContact.relation || 'Not specified' %></p>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Phone Number</p>
                            <p class="text-slate-800 font-medium"><%= application.emergencyContact.phone %></p>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>

        </div>

        <!-- Action Panel -->
        <div class="lg:col-span-1">
            
            <!-- Quick Actions -->
            <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden sticky top-6">
                <div class="p-6 bg-gradient-to-r from-slate-50 to-slate-100 border-b border-slate-200">
                    <h3 class="text-lg font-bold text-slate-800">Actions</h3>
                </div>
                <div class="p-6">
                    
                    <% if (application.status === 'pending') { %>
                    <!-- Approve/Reject Actions -->
                    <div class="space-y-3 mb-6">
                        <button 
                            onclick="updateStatus('approved')" 
                            class="w-full px-4 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition-colors flex items-center justify-center gap-2"
                        >
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Approve Application
                        </button>
                        <button 
                            onclick="updateStatus('rejected')" 
                            class="w-full px-4 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors flex items-center justify-center gap-2"
                        >
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                            Reject Application
                        </button>
                    </div>

                    <!-- Notes Section -->
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Review Notes</label>
                        <textarea 
                            id="reviewNotes" 
                            rows="4" 
                            class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none text-sm"
                            placeholder="Add notes about your decision..."
                        ></textarea>
                    </div>
                    <% } else { %>
                    <!-- Status Display -->
                    <div class="mb-6">
                        <p class="text-sm text-slate-600 mb-2">This application has been <strong class="capitalize"><%= application.status %></strong></p>
                        <% if (application.status === 'approved' || application.status === 'rejected') { %>
                        <button 
                            onclick="updateStatus('pending')" 
                            class="w-full px-4 py-3 bg-gray-600 text-white font-semibold rounded-lg hover:bg-gray-700 transition-colors"
                        >
                            Reset to Pending
                        </button>
                        <% } %>
                        <% if (application.status === 'approved') { %>
                        <button 
                            onclick="updateStatus('completed')" 
                            class="w-full px-4 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors mt-3"
                        >
                            Mark as Completed
                        </button>
                        <% } %>
                    </div>
                    
                    <% if (application.reviewNotes) { %>
                    <div class="bg-slate-50 rounded-lg p-4">
                        <p class="text-xs font-semibold text-slate-500 uppercase mb-2">Review Notes</p>
                        <p class="text-sm text-slate-700"><%= application.reviewNotes %></p>
                    </div>
                    <% } %>
                    <% } %>
                    
                </div>
            </div>

        </div>

    </div>

</div>

<script>
async function updateStatus(newStatus) {
    const notes = document.getElementById('reviewNotes')?.value || '';
    
    const confirmMessage = newStatus === 'approved' 
        ? 'Are you sure you want to approve this application?' 
        : newStatus === 'rejected'
        ? 'Are you sure you want to reject this application?'
        : newStatus === 'completed'
        ? 'Mark this application as completed?'
        : 'Reset this application to pending?';
    
    if (!confirm(confirmMessage)) {
        return;
    }
    
    try {
        const response = await fetch('/admin/applications/<%= application._id %>/status', {
            method: 'PATCH',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ status: newStatus, notes })
        });
        
        const result = await response.json();
        
        if (result.success) {
            alert('✅ ' + result.message);
            window.location.reload();
        } else {
            alert('❌ ' + (result.message || 'Failed to update status'));
        }
    } catch (error) {
        console.error('Error:', error);
        alert('❌ An error occurred. Please try again.');
    }
}
</script>
